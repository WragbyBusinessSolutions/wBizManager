@model IEnumerable<E4S.Models.AccountInventory.AccountBank>

@{
    ViewData["Title"] = "Bank/Account";
    Layout = "~/Views/Shared/_LayoutAccountInventory.cshtml";
}


<style>
    .body-card {
        margin-left: 2%;
        margin-right: 2%;
        margin-top: 1%;
        margin-bottom: 2%;
    }

    .table-font {
        font-weight: 500;
    }
</style>

<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header body-card">
                    <div class="btn-group pull-right">
                        <button type="button" class="btn btn-success btn-round dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Export Data
                        </button>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="#">Copy</a>
                            <a class="dropdown-item" href="#">CSV</a>
                            <a class="dropdown-item" href="#">Excel</a>
                            <a class="dropdown-item" href="#">PDF</a>
                            <a class="dropdown-item" href="#">Print</a>

                        </div>
                    </div>

                    <button class="btn btn-info btn-md pull-right btn-responsive" data-toggle="modal" data-target="#exampleModalLong">

                        <span class="btn-label">
                            <i class="now-ui-icons travel_info"></i>
                        </span>

                        Create New

                    </button>

                    <!-- Modal -->
                    <div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLongTitle">Enter New Account Record</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>

                                <div class="modal-body">
                                    <form>
                                        <label class="pull-left">Account Type</label>
                                        <select id="accountType" name="accountType" type="text" class="form-control">
                                            <option disabled style="background-color:lightgrey;">Assets</option>
                                            <option value="CB">Cash and Bank</option>
                                            <option value="MT">Money in Transit</option>
                                            <option disabled style="background-color:lightgrey;">Liabilities & Credit Cards</option>
                                            <option value="CC">CreditCard</option>
                                            <option value="CB">Loan and Line of Credit</option>
                                        </select>
                                        <br />
                                        <label class="pull-left">Account Name</label>
                                        <input id="accountName" name="accountName" type="text" class="form-control" />
                                        <br />
                                        <label class="pull-left">Account No</label>
                                        <input id="accountNo" name="accountNo" type="text" class="form-control" />
                                        <br />
                                        <label class="pull-left">Bank Name</label>
                                        <input id="bankName" name="bankName" type="text" class="form-control" />
                                        <br />
                                        <label class="pull-left">Description</label>
                                        <textarea id="description" name="description" type="text" class="form-control"></textarea>
                                        <br />

                                    </form>

                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    <button id="SubmitNewAccount" name="SubmitNewVendor" type="button" class="btn btn-info">Create</button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="modal fade" id="exampleModalEdit" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLongTitle">Edit Account Record</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>

                                <div class="modal-body">
                                    <form>
                                        <input id="bankid" name="bankid" hidden />
                                        <label class="pull-left">Account Type</label>
                                        <select id="eaccountType" name="eaccountType" type="text" class="form-control">
                                            <option disabled style="background-color:lightgrey;">Assets</option>
                                            <option value="CB">Cash and Bank</option>
                                            <option value="MT">Money in Transit</option>
                                            <option disabled style="background-color:lightgrey;">Liabilities & Credit Cards</option>
                                            <option value="CC">CreditCard</option>
                                            <option value="CB">Loan and Line of Credit</option>
                                        </select>
                                        <br />
                                        <label class="pull-left">Account Name</label>
                                        <input id="eaccountName" name="eaccountName" type="text" class="form-control" />
                                        <br />
                                        <label class="pull-left">Account No</label>
                                        <input id="eaccountNo" name="eaccountNo" type="text" class="form-control" />
                                        <br />
                                        <label class="pull-left">Bank Name</label>
                                        <input id="ebankName" name="ebankName" type="text" class="form-control" />
                                        <br />
                                        <label class="pull-left">Description</label>
                                        <textarea id="edescription" name="edescription" type="text" class="form-control"></textarea>
                                        <br />

                                    </form>

                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    <button id="editAccount" @*name="editAccount"*@ type="button" class="btn btn-info">Edit</button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <h4 class="card-title">Banks/Account</h4>
                </div>
                <div class="card-body body-card">

                    <div class="table-responsive-sm">
                        <table id="datatable2" class="table table-hover">
                            <thead>
                                <tr>
                                    <th><strong>S/N</strong></th>
                                    <th scope="col"><strong>Account Name</strong></th>
                                    <th scope="col"><strong>Bank Name</strong></th>
                                    <th scope="col"><strong>Account Number</strong></th>
                                    <th scope="col"><strong>Account Type</strong></th>
                                    <th scope="col" class="disabled-sorting"><strong>Actions</strong></th>
                                </tr>
                            </thead>
                            <tbody class="fontweight">

                                @{
                                    int i = 1;

                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td scope="row" class="table-font">@i</td>
                                            <td scope="row">@item.AccountName</td>
                                            <td scope="row">@item.BankName</td>
                                            <td scope="row">@item.AccountNo</td>
                                            <td scope="row">@item.AccountType</td>
                                            <td class="">
                                                @*<a asp-action="EditVendor" asp-route-id="@item.Id" class="btn btn-warning btn-icon btn-sm"><i class="fas fa-edit"></i></a>*@
                                                @*<span data-toggle="modal" data-target="#exampleModalEdit"><a href="#" class="btn btn-warning btn-icon btn-sm" id="Editbtn" BankId="@item.Id" Selected-AccountName="@item.AccountName" Selected-BankName="@item.BankName" Selected-Description="@item.Description" Selected-AccountType="@item.AccountType" Selected-AccountNo="@item.AccountNo" title="Click to Edit" data-toggle="tooltip" data-placement="top" id="Editbtn"><i class="fa fa-edit"></i></a></span>*@

                                                <a asp-action="EditAccount" asp-route-id="@item.Id" class="btn btn-warning btn-icon btn-sm" data-toggle="tooltip" data-placement="top" title="Click To Edit"><i class="fas fa-edit"></i></a>


                                                <a href="#" data-toggle="tooltip" data-placement="top" title="Click To Delete" class="btn btn-danger btn-icon btn-sm remove" BankId="@item.Id" accountName="@item.AccountName" bankName="@item.BankName" description="@item.Description" accountType="@item.AccountType" accountNo="@item.AccountNo"><i class="fas fa-times"></i></a>
                                            </td>
                                        </tr>

                                        i++;
                                    }
                                }
                            </tbody>
                        </table>
                    </div>


                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {

    <script>
        $(document).ready(function () {

            $('#datatable2').DataTable({
                "pagingType": "full_numbers",
                dom: "Bfrtip",
                "lengthMenu": [
                    [10, 25, 50, -1],
                    [10, 25, 50, "All"]
                ],


                buttons: [
                    'copy',
                    'excel',
                    'csv',
                    'pdf',
                    'print',
                ],


                responsive: true,
                language: {
                    search: "_INPUT_",
                    searchPlaceholder: "Search records",
                }

            });

            var table = $('#datatable2').DataTable();


            // Delete a record
            table.on('click', '.remove', function (e) {
                $tr = $(this).closest('tr');

                accountId = $(this).attr('BankId');
                accountType = $(this).attr('accountType');
                accountName = $(this).attr('accountName');
                accountNo = $(this).attr('accountNo');
                bankName = $(this).attr('bankName');
                description = $(this).attr('description');

                


                swal({
                    title: 'Are you sure?',
                    text: "You are about to delete '" + accountName + "'",
                    type: 'warning',
                    showCancelButton: true,
                    confirmButtonClass: 'btn btn-success',
                    cancelButtonClass: 'btn btn-danger',
                    confirmButtonText: 'Yes, delete it!',
                    buttonsStyling: false
                }).then(function () {

                    $.ajax({
                        type: "POST",
                        url: "/Banks/DeleteAccount",
                        data: JSON.stringify(accountId),
                        dataType: "json",
                        contentType: 'application/json; charset=utf-8',
                        headers: {
                            RequestVerificationToken:
                                $('input:hidden[name="__RequestVerificationToken"]').val()
                        },
                        success: function (r) {

                            if (r.msg == "Success") {

                                swal({
                                    title: 'Deleted!',
                                    text: 'Your file has been deleted.',
                                    type: 'success',
                                    confirmButtonClass: "btn btn-success",
                                    buttonsStyling: false
                                });


                            } else if (r.msg == "Fail") {

                                alert(r.msg);

                            } else if (r.msg == "No Data") {
                                alert(r.msg);

                            } else {
                                alert(r.msg);
                            }
                            //alert(r.msg);
                            // window.location.reload();

                        },
                        error: function () {
                            alert(r.msg);
                        }
                    });


                    table.row($tr).remove().draw();

                }).catch(swal.noop);


                e.preventDefault();
            });

            //Like record
            table.on('click', '.like', function () {
                alert('You clicked on Like button');
            });
        });
    </script>

