                                                <input type="text" class="form-control" placeholder="" required>
                                            </div>
                                        </div>


                                        <div class="form-group row">
                                            <label for="exampleInputuname3" class="col-sm-3 control-label">E-mail*</label>
                                            <div class="col-sm-9">
                                                <div class="input-group">
                                                    <div class="input-group-prepend"></div>
                                                    <input type="text" class="form-control" placeholder="Enter E-mail" required>
                                                </div>
                                            </div>
                                        </div>


                                        <div class="form-group row">
                                            <label for="exampleInputuname3" class="col-sm-3 control-label">Vendor Phone Number*</label>
                                            <div class="col-sm-9">
                                                <div class="input-group">
                                                    <div class="input-group-prepend"></div>
                                                    <input type="text" class="form-control" placeholder="Vendor Phone Number" required>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="modal-footer">
                                            <button type="submit" class="btn btn-info waves-effect waves-light">Save</button>
                                            <button type="button" class="btn btn-danger waves-effect" data-dismiss="modal">Close</button>
                                        </div>

