                    <form class="center-block content-center">

                        <label>Vendor Name*</label>
                        <select class="form-control col-sm-6"></select>
                        <br />
                        <label>Bill No*</label>
                        <input class="form-control col-sm-6" placeholder="Bills No" />

                        <br />
                        <label>Bill Note*</label>
                        <input class="form-control col-sm-6" placeholder="Bills Note" />

                        <br />
                        <label>Amount*</label>
                        <input class="form-control col-sm-6" placeholder="Amount" />


                        <div id="longModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
