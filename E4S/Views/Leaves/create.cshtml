@model E4S.Models.Organisation
@{
    ViewData["Title"] = "Edit Organisation";
    Layout = "~/Views/Shared/_LayoutHumanResouces.cshtml";
}


@*<!-- End Navbar -->
    <!-- End Navbar -->
    <div class="panel-header panel-header-sm">
    </div>*@
<div class="content">
    <div class="col-md-10 mr-auto ml-auto">
        <!--      Wizard container        -->
        <div class="wizard-container">
            <div class="card card-wizard" data-color="primary" id="wizardProfile">
                <form action="Edit"  method="post">
                    <!--        You can switch " data-color="primary" "  with one of the next bright colors: "green", "orange", "red", "blue"       -->
                    <div class="card-header text-center" data-background-color="orange">
                        <h3 class="card-title">
                            Leave Application
                        </h3>
                        <h5 class="description"><h5>This information will let us know more about you.</h5>
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="tab-content">
                            <div class="tab-pane fade show active" id="about">
                                <h5 class="info-text"> Let's start with the basic information (with validation)</h5>
                                <div class="row justify-content-center">
                                    <div class="col-sm-6">
                                        <label class="col-md-3 col-form-label">Leave Title</label>
                                        <div class="form-group">                                  
                                            <select class="form-control">
                                                <option selected> Select Leave</option>
                                                <option>Annual Leave</option>
                                                <option>Casual Leave</option>
                                                <option>Sick Leave</option>
                                                <option>Compassionate Leave</option>
                                                <option>Study Leave</option>
                                                <option>Maternity Leave</option>
                                                <option>Paternity Leave</option>
                                                <option>Other</option>
                                            </select>
                                        </div>
                                        <label class="col-md-3 col-form-label">Description</label>
                                        <div class="form-group">                                           
                                            <input type="text" placeholder="description (required)" class="form-control" asp-for="OrganisationName" />
                                        </div>
                                        <label class="col-md-3 col-form-label">Start Date</label>
                                        <div class="input-group form-control-lg">
                                            <span class="input-group-addon">
                                                <i class="now-ui-icons text_caps-small"></i>
                                            </span>
                                            <input type="date" placeholder="Start Date (required)" class="form-control" asp-for="PhoneNumber" />
                                        </div>
                                        <label class="col-md-3 col-form-label">End Date</label>
                                        <div class="input-group form-control-lg">
                                            <span class="input-group-addon">
                                                <i class="now-ui-icons text_caps-small"></i>
                                            </span>
                                            <input type="date" placeholder="End Date (required)" class="form-control" asp-for="Email" />
                                        </div>
                                        <label class="col-md-3 col-form-label">Approved Date</label>
                                        <div class="input-group form-control-lg">
                                            <span class="input-group-addon">
                                                <i class="now-ui-icons text_caps-small"></i>
                                            </span>
                                            <input type="text" placeholder="Approved Date (required)" class="form-control" asp-for="ZipCode" />
                                        </div>                                        
                                        <label class="col-md-3 col-form-label">Status</label>
                                        <div class="input-group form-control-lg">
                                            <span class="input-group-addon">
                                                <i class="now-ui-icons text_caps-small"></i>
                                            </span>
                                            <input type="text" placeholder="Last Name (required)" asp-for="Address" class="form-control" />
                                        </div>                                        
                                        <div class="card-footer ">
                                            <button type="submit" class="btn btn-fill btn-primary" >Submit</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <!-- wizard container -->
    </div>
</div>

<!--	Plugin for Select, full documentation here: http://silviomoreto.github.io/bootstrap-select -->
<script src="~/assets/js/plugins/bootstrap-selectpicker.js"></script>



