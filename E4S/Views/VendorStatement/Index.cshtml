
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAccountInventory.cshtml";
}



<style>
    .body-card {
        margin-left: 2%;
        margin-right: 2%;
        margin-top: 1%;
        margin-bottom: 2%;
    }

    .table-font {
        font-weight: 500;
    }


    .labeltext {
        padding-left: 20px;
        padding-right: 20px;
        color: #000 !important;
        text-align: right;
    }

    .Bills {
        padding-left: 14px;
    }

    .stateinfo {
        text-align: center;
        margin-top: 70px;
        margin-bottom: 50px;
        font-weight: 600;
    }
</style>

<div class="content">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <div class="card">
                <div class="card-header body-card">
                    <h5>Vendor Statement</h5>

                </div>

                <div class="card-body body-card">

                    <form class="form">
                        <div class="form-inline">
                            <label class="labeltext col-sm-3">Vendor ID*</label>
                            <select class="form-control col-sm-4">
                                <option>1</option>
                            </select>
                        </div>
                        <br />

                        <div class="form-inline">
                            <label class="labeltext col-sm-3" style="text-align:left;">From</label>
                            <input type="date" class="form-control col-sm-4" />

                        </div>

                        <br />
                        <div class="form-inline">
                            <label class="labeltext col-sm-3">To</label>
                            <input type="date" class="form-control col-sm-4" />
                        </div>
                    </form>

                </div>
            </div>
            <div class="card">
                <div class="card-header body-card">
                    <div class="pull-right col-md-6">
                        <p> Invoice Date: Jul, 12 2019</p> 
                    </div>

                    <div class="col-md-6">
                        <h6>Statement of Account</h6>
                        <p>  (Generated on Jul 12, 2019)</p>
                    </div>
                   

                </div>
                <hr />
                <div class="body-card Bills">
                    <h4> Bills</h4>
                </div>

                <div class="card-body body-card">

                    <div class="pull-right">
                        <h6>From: Adewuyi Elijah</h6>
                        Email: Eadewuyi@wragby.com
                    </div>
                    <div>
                        <h6>To: Anene Temofe</h6>
                        <p>Email: Tanene@wragbysolutions.com</p>
                    </div>
                    
                    <div class="clearfix"></div>
                    <div class="stateinfo">
                        SHOWING ALL INVOICES AND PAYMENTS BETWEEN Jul 11, 2019 AND August 01, 2019
                    </div>
                    <div class="table-responsive-sm">
                        <table class="table table-hover" align="center">
                            <thead>
                                <tr>

                                    <th scope="col"><strong>Date</strong></th>
                                    <th scope="col"><strong>Details</strong></th>

                                    <th scope="col" style="text-align: right"><strong>Amount</strong></th>

                                </tr>
                            </thead>
                            <tbody class="fontweight">

                                <tr>
                                    <td>2</td>
                                    <td>Olivia Liang</td>
                                    <td style="text-align: right">10,0000</td>

                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <div class="col-md-12">
                        <div class="pull-right">
                            <p>Total :  ₦10000.00</p>

                            <div class="clearfix"></div>


                        </div>
                        <br />
                        <hr />
                        <div class="col-md-12 total-section">
                            <div class="pull-right">
                                <button id="print" class="btn btn-info btn-outline" type="button"> <span><i class="fa fa-print"></i> Print</span> </button>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>